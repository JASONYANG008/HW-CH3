package P22;

public class P22 
{
	public static void main(String[] arg)
	{
		Car car1;
		car1 = new Car();
		car1.setNumGas(1234,20.5);
		car1.show();
		System.out.println("指定不正_的汽油量{-10,0}看看");
		
		car1.setNumGas(1234,-10.0);
		car1.show();
		
		}
}
class Car
{
	private int num;
	private double gas;
	
	public void setNumGas(int n ,double g)
	{
		if(g>0 && g<100)
		{
			num=n;
			gas=g;
			System.out.println("④O"+num+"汽油量O"+gas);
		}
		else
		{
			System.out.println("不是正_的汽油量");
			System.out.println("o法更汽油量");
		}
	}
	public void show()
	{
		System.out.println("是"+this.num);
		System.out.println("汽油量是"+this.gas);
	}
}
